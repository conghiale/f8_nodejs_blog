{{!-- <h1>HOME PAGE</h1> --}}

<div class="container mt-3">
    <div class="row">
        {{#each course}}
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card course">
                    <a href="/courses/{{this.slug}}">
                        <img src="{{this.image}}" class="card-img-top course__img" alt="ERROR!!!">
                    </a>
                    <div class="card-body course__body">
                        <a href="/courses/{{this.slug}}">
                            <h5 class="card-title course__body--name">{{this.name}}</h5>
                        </a>
                        <p class="card-text course__body--description">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Buy course</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>