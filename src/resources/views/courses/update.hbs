<div class="mt-3">
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <h3>Update Course</h3>
        <div class="mb-3">
            <label for="name" class="form-label">Name course</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="Enter name course">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description course</label>
            <textarea class="form-control" id="description" name="description" placeholder="Enter description course">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">VideoId course</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" placeholder="Enter videoId course">
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level course</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level" placeholder="Enter level course">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>